<UserControl x:Name="userControl" x:Class="Alteridem.GitHub.View.GiHubUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             DataContext="{Binding ElementName=userControl, Path=GitHubApi.User}"
             d:DesignHeight="48" d:DesignWidth="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="24" />
            <RowDefinition Height="24" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="48"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image x:Name="Image" Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Width="36" Height="36" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="6" Source="{Binding AvatarUrl}"/>
        <TextBlock x:Name="Name" Grid.Row="0" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="6,6,6,3" Text="{Binding Name}" />
        <TextBlock x:Name="Location" Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="6,3,6,6" Text="{Binding Location}" />
    </Grid>
</UserControl>
